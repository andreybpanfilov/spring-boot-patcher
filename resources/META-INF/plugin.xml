<idea-plugin>
    <id>tel.panfilov.intellij.plugin.springboot</id>
    <name>SpringBoot Patcher</name>
    <version>1.1</version>
    <vendor email="andrew@panfilov.tel" url="https://github.com/andreybpanfilov/spring-boot-patcher">Andrey B.Panfilov</vendor>

    <description><![CDATA[
      <p>Shares spring-boot-maven-plugin configuration with IDEA Runner:</p>
      <p>when IntelliJ IDEA runs main class, plugin tries to discover execution
      configuration of <b>spring-boot-maven-plugin</b> with the <b>goal=run</b>
      and same <b>mainClass</b> and in case of success it enriches command line
      parameters with configured system properties</p>
    ]]></description>

    <change-notes><![CDATA[

    ]]>
    </change-notes>

    <idea-version since-build="203.0"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>org.jetbrains.idea.maven.ext</depends>
    <depends>org.jetbrains.idea.maven.model</depends>


    <extensions defaultExtensionNs="com.intellij">
        <java.programPatcher implementation="tel.panfilov.intellij.plugin.springboot.SpringBootPatcher"/>
    </extensions>

    <actions>

    </actions>

</idea-plugin>